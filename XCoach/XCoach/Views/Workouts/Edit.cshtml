@model XCoach.Models.WorkoutViewModel.WorkoutEditViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Workout</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Workout.Id" />

            <div class="form-group">
                <label asp-for="Workout.Title" class="control-label"></label>
                <input asp-for="Workout.Title" class="form-control" />
                <span asp-validation-for="Workout.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.Description" class="control-label"></label>
                <input asp-for="Workout.Description" class="form-control" />
                <span asp-validation-for="Workout.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Workout.WorkoutTypeId" class="control-label"></label>
                <select asp-for="Workout.WorkoutTypeId" class="form-control" asp-items="@Model.TypesToSelect"></select>
                <span asp-validation-for="Workout.WorkoutTypeId" class="text-danger"></span>

            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
