@model XCoach.Models.Race

@{
    ViewData["Title"] = "Details";
}

<h1 style="text-align; center">Details</h1>

<div>
    <h4>Race</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MeetName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MeetName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Distance)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Distance) Meters
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EventDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EventDate)
        </dd>
    </dl>
</div>
<section class="athleteCard">
    @foreach (var item in Model.AthleteRaces)
    {
        <div class="card cardStyle" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title">
                    @Html.DisplayFor(model => item.Athlete.FirstName)
                    @Html.DisplayFor(model => item.Athlete.LastName)
                </h5>
                <hr />
                <p class="card-text">
                    @Html.DisplayNameFor(model => item.ProjectedTime):
                    @Html.DisplayFor(model => item.ProjectedTime)
                </p>
                <p class="card-text">
                    @Html.DisplayNameFor(model => item.ActualTime):
                    @Html.DisplayFor(model => item.ActualTime)
                </p>
                <a asp-action="Index" asp-controller="AthleteRaces">Edit Results</a>
            </div>
        </div>
    }
</section>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
